@model Watch_manager.ViewModels.GenreViewModel

@{
    ViewData["Title"] = "Movie list";
}

<h2> @ViewData["Title"]</h2>


<form asp-controller="Movies" asp-action="Index" method="get">
    <div class="row">
        <div class="col-md-3">
            <input type="text" name="SearchString" class="form-control" placeholder="Title:" />
        </div>
        <div class="col-md-2" display>
            <select asp-for="MovieGenre" asp-items="Model.Genres" class="form-control">
                <option value="">Genre: All</option>
            </select>
        </div>
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
</form>

<div class="col-md-2">
    <p>
        <a asp-action="Create">Add new movie</a>
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Link)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @for(int i = 0; i < Model.Movies.Count; i++) 
        {
        <tr><td>
                @(i+1)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@Model.Movies[i].Id"> 
                    @Html.DisplayFor(modelItem => Model.Movies[i].Title)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Movies[i].Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Movies[i].Length)
            </td>
            <td>
                <a href="@Html.DisplayFor(modelItem => Model.Movies[i].Link)">
                    @Html.DisplayFor(modelItem => Model.Movies[i].Title) @@FilmeSerialeOnline.org
                </a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@Model.Movies[i].Id">Edit</a>|
                <a asp-action="Delete" asp-route-id="@Model.Movies[i].Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
